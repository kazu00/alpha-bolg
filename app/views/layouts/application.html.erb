<!DOCTYPE html>
<!-- ラッパーページ
     全てのページで表示されるファイル  -->
<html>
  <head>
    <title>TestApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |name, msg| %>
    <ul>
      <!-- msgが表示される  -->
      <li><%= msg %></li>
    </ul>
    <% end %>
    
    <%= yield %>
    
  </body>
</html>
