<h1 ailgn="center">ログインページ</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :メールアドレス %>
        </div>
        <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", autofocus: true %>
        </div>
     </div>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :パスワード %>
        </div>
        <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        </div>
     </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <!-- new_record?と尋ねることで、新規記録であれば○○と表示する
                new.htmlとedit.htmlのそれぞれ違う表示部分を変更できる-->
            <%= f.submit "ログイン" , class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "キャンセルして記事に戻る", articles_path %> ]
</div>