<%= render 'shared/errors', obj: @article %>

<div class='row'>
    <div class='col-xs-12'>
        <!-- Rails5では、非推奨なヘルパー -->
        <%= form_for(@article, :html => { class: "form_horizontal", role: "form" }) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :タイトル %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "記事のタイトル", autofocus: true %>
                </div>
             </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :説明欄 %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :description,rows: 10, class: "form-control", placeholder: "記事の内容" %>
                </div>
             </div>
                
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
      <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "キャンセルして記事に戻る", articles_path %> ]
        </div>
    </div>
</div>