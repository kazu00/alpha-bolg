<h1 align="center">カテゴリーを作成する</h1>

<%= render 'shared/errors', obj: @category %>

<!-- Rails5では、非推奨なヘルパー -->
<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :名前 %>
        </div>
        <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "カテゴリ名", autofocus: true %>
        </div>
     </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "キャンセルして記事に戻る", articles_path %> ]
</div>